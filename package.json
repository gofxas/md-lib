{
  "name": "md-lib",
  "private": true,
  "version": "0.0.1",
  "main": "main.js",
  "description": "markdown library",
  "author": "ryu",
  "email":"yier4ha@gmail.com",
  "scripts": {
    "dev:h5": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev": "nodemon --watch ./src -e js,vue --exec vite build ",
    "electron": "electron . DEV",
    "builder:win": "electron-builder --windows nsis:x64",
    "builder:linux": "electron-builder --linux deb tar.xz",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "@vicons/antd": "^0.12.0",
    "sequelize": "^6.32.1",
    "sha1": "^1.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@bytemd/plugin-breaks": "^1.21.0",
    "@bytemd/plugin-frontmatter": "^1.21.0",
    "@bytemd/plugin-gemoji": "^1.21.0",
    "@bytemd/plugin-gfm": "^1.21.0",
    "@bytemd/plugin-highlight": "^1.21.0",
    "@bytemd/plugin-math": "^1.21.0",
    "@bytemd/plugin-medium-zoom": "^1.21.0",
    "@bytemd/plugin-mermaid": "^1.21.0",
    "@bytemd/vue-next": "^1.21.0",
    "@electron/rebuild": "3.2.13",
    "@vicons/fluent": "^0.12.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "electron": "23.1.3",
    "electron-builder": "23.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "github-markdown-css": "^5.2.0",
    "highlight.js": "^11.8.0",
    "katex": "^0.16.8",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "naive-ui": "^2.34.4",
    "nodemon": "^2.0.21",
    "seemly": "^0.3.6",
    "uuid": "^9.0.0",
    "vfonts": "^0.0.3",
    "vite": "^4.4.5",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuex": "^4.1.0"
  },
  "build": {
    "icon": "./icon.png",
    "asar": true,
    "compression": "normal",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "文笥"
    },
    "win": {
      "artifactName": "${productName}_${version}.${ext}",
      "icon": "./icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    }
  }
}
